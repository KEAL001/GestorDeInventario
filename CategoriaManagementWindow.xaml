<Window x:Class="GestorDeInventario.CategoriaManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Categorías" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgCategorias" Grid.Row="0" Margin="10" AutoGenerateColumns="True" CanUserAddRows="False" IsReadOnly="True"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Agregar Categoría" Margin="5" Width="150" Click="btnAgregar_Click"/>
            <Button Content="Editar Categoría" Margin="5" Width="150" Click="btnEditar_Click"/>
            <Button Content="Eliminar Categoría" Margin="5" Width="150" Click="btnEliminar_Click"/>
        </StackPanel>
    </Grid>
</Window>
