<Window x:Class="GestorDeInventario.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Usuarios" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgUsuarios" Grid.Row="0" Margin="10" AutoGenerateColumns="True" CanUserAddRows="False"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Agregar Usuario" Margin="5" Width="120" Click="btnAgregarUsuario_Click"/>
            <Button Content="Editar Usuario" Margin="5" Width="120" Click="btnEditarUsuario_Click"/>
            <Button Content="Eliminar Usuario" Margin="5" Width="120" Click="btnEliminarUsuario_Click"/>
        </StackPanel>
    </Grid>
</Window>