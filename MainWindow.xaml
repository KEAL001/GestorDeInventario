<Window x:Class="GestorDeInventario.MainWindow"    
        xmlns:sys="clr-namespace:System;assembly=mscorlib"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"    
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
        xmlns:viewModels="clr-namespace:GestorDeInventario.ViewModels"  
        Title="Gestor de Inventario - Sistema Profesional"     
        Height="800" Width="1400"     
        WindowStartupLocation="CenterScreen"    
        WindowState="Maximized"    
        Background="#F8F8F8"    
        Loaded="Window_Loaded">

    <Window.Resources>
        <FontFamily x:Key="FontAwesome">pack://application:,,,/Fonts/Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid</FontFamily>

        <!-- Estilos Profesionales -->
        <Style x:Key="ProfessionalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#357ABD"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5,3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="{StaticResource FontAwesome}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                    <Setter Property="BorderBrush" Value="#2E6DA4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E6DA4"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                    <Setter Property="BorderBrush" Value="#BBBBBB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfessionalButtonStyle}">
            <Setter Property="Background" Value="#5CB85C"/>
            <Setter Property="BorderBrush" Value="#4CAE4C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4CAE4C"/>
                    <Setter Property="BorderBrush" Value="#449D44"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfessionalButtonStyle}">
            <Setter Property="Background" Value="#F0AD4E"/>
            <Setter Property="BorderBrush" Value="#EEA236"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEA236"/>
                    <Setter Property="BorderBrush" Value="#E6982A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfessionalButtonStyle}">
            <Setter Property="Background" Value="#D9534F"/>
            <Setter Property="BorderBrush" Value="#D43F3A"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D43F3A"/>
                    <Setter Property="BorderBrush" Value="#C9302C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ProfessionalDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="VerticalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="RowHeight" Value="35"/>
        </Style>

        <Style x:Key="ProfessionalDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header Profesional -->
        <Border Grid.Row="0" Background="#2C3E50" BorderBrush="#34495E" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xf1b3;"      
                        FontFamily="{StaticResource FontAwesome}"    
                        FontSize="28" Foreground="White" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="GESTOR DE INVENTARIO"     
                                 FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Sistema de Gestión Empresarial"     
                                 FontSize="11" Foreground="#BDC3C7"/>
                    </StackPanel>
                </StackPanel>

                <!-- Logo Empresa -->
                <Image Source="pack://application:,,,/Images/logo.png"     
                       Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"  
                       MaxHeight="40" MaxWidth="120" Margin="966,0,0,0" Height="50" Width="91"/>

                <!-- Información del Usuario -->
                <Border Grid.Column="1" Background="White" BorderBrush="#BDC3C7" BorderThickness="1"   
                        Padding="10,5" VerticalAlignment="Center" Margin="797,0,125,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xF007;"   
                             FontFamily="{StaticResource FontAwesome}"    
                             FontSize="12" Foreground="#2C3E50" Margin="0,0,6,0"/>
                        <TextBlock x:Name="txtUsuarioActual" Text="Usuario Actual:"     
                                 FontWeight="SemiBold" Foreground="#2C3E50" FontSize="12"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Toolbar Profesional -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="15,10">
            <WrapPanel HorizontalAlignment="Left">
                <!-- Grupo Productos -->
                <GroupBox Header="Gestión de Productos" Margin="0,0,15,0" Padding="8,5">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnAgregarProducto"     
                                Style="{StaticResource ActionButtonStyle}"      
                                Content="&#xf067; Agregar"     
                                Click="btnAgregarProducto_Click" Width="97"/>
                        <Button x:Name="btnEditarProducto"   
                                Style="{StaticResource ProfessionalButtonStyle}"   
                                Content="✏️ Editar"
                                FontFamily="Segoe UI" 
                                IsEnabled="False"   
                                Click="btnEditarProducto_Click" Cursor="" Width="90" Height="32"/>
                        <Button x:Name="btnEliminarProducto"     
                                Style="{StaticResource DeleteButtonStyle}"    
                                Content="&#xf2ed; Eliminar"     
                                IsEnabled="False"     
                                Click="btnEliminarProducto_Click" Width="96"/>
                    </StackPanel>
                </GroupBox>

                <!-- Grupo Configuración -->
                <GroupBox Header="Adicional" Margin="0,0,15,0" Padding="8,5">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnGestionProveedores"     
                                Style="{StaticResource ProfessionalButtonStyle}"    
                                Content="&#xf466; Proveedores"     
                                Click="btnGestionProveedores_Click" Width="123"/>
                        <Button x:Name="btnGestionCategorias"   
                                Style="{StaticResource ProfessionalButtonStyle}"  
                                Content="📊 CATEGORIA"
                                FontFamily="Segoe UI"  
                                Click="btnGestionCategorias_Click" Width="117" Height="32"/>
                    </StackPanel>
                </GroupBox>

                <!-- Grupo Operaciones -->
                <GroupBox Header="Operaciones" Margin="0,0,15,0" Padding="8,5">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnKardex"     
                                Style="{StaticResource ProfessionalButtonStyle}"    
                                Content="&#xf328; Kardex"     
                                Click="btnKardex_Click" Width="91"/>
                        <Button x:Name="btnReportes"     
                                Style="{StaticResource ProfessionalButtonStyle}"    
                                Content="&#xf15c; Reportes"     
                                Click="btnReportes_Click" Width="102"/>
                    </StackPanel>
                </GroupBox>

                <!-- Grupo Sistema -->
                <GroupBox Header="Sistema" Padding="8,5">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnGestionUsuarios"     
                                Style="{StaticResource ProfessionalButtonStyle}"    
                                Visibility="Collapsed"  
                                Content="&#xf0c0; Usuarios"     
                                Click="btnGestionUsuarios_Click" Width="103"/>
                        <Button x:Name="btnCerrarSesion"     
                                Style="{StaticResource DeleteButtonStyle}"    
                                Content="&#xf2f5; Cerrar Sesion"     
                                Click="btnCerrarSesion_Click" Width="141"/>
                    </StackPanel>
                </GroupBox>
            </WrapPanel>
        </Border>
        <!-- DataGrid Principal -->
        <Border Grid.Row="2" Background="White" Margin="15" BorderBrush="#DDDDDD" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título de la Sección -->
                <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xf1b2;"    
                                 FontFamily="{StaticResource FontAwesome}"    
                                 FontSize="16" Foreground="#495057" Margin="0,0,8,0"/>
                        <TextBlock Text="INVENTARIO DE PRODUCTOS"     
                                 FontSize="14" FontWeight="Bold" Foreground="#495057"/>
                        <Border Background="#28A745" Padding="6,2" Margin="12,0,0,0">
                            <TextBlock x:Name="txtTotalProductos" Text="0 productos"     
                                     Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- DataGrid Profesional -->
                <DataGrid x:Name="dgProductos" Grid.Row="1"     
                          Style="{StaticResource ProfessionalDataGridStyle}"    
                          IsReadOnly="True"     
                          AutoGenerateColumns="False"     
                          SelectionMode="Single"    
                          SelectionChanged="dgProductos_SelectionChanged"    
                          Margin="0">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ProfessionalDataGridColumnHeader}"/>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="35"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F1F3F4"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="Foreground" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,6"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Estado" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" FontSize="14">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AlertaStock}" Value="⚠️">
                                                        <Setter Property="Text" Value="⚠️"/>
                                                        <Setter Property="Foreground" Value="#FF8C00"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AlertaStock}" Value="✅">
                                                        <Setter Property="Text" Value="✅"/>
                                                        <Setter Property="Foreground" Value="#28A745"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" MinWidth="150"/>
                        <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="120"/>
                        <DataGridTextColumn Header="Stock Actual" Binding="{Binding StockActual}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Stock Mínimo" Binding="{Binding StockMinimo}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" Width="*" MinWidth="120"/>
                        <DataGridTextColumn Header="Proveedor" Binding="{Binding Proveedor}" Width="*" MinWidth="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Barra de Estado Profesional -->
        <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0" Padding="15,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Sistema de Gestión de Inventario v1.0"     
                         Foreground="#6C757D" FontSize="11"/>
                <TextBlock Grid.Column="1" x:Name="txtFechaHora" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy HH:mm'}"     
                         Foreground="#6C757D" FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</Window>