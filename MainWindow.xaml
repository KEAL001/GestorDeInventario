<Window x:Class="GestorDeInventario.MainWindow"  
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        xmlns:viewModels="clr-namespace:GestorDeInventario.ViewModels"
        Title="Gestor de Inventario - Sistema Profesional"   
        Height="800" Width="1400"   
        WindowStartupLocation="CenterScreen"  
        WindowState="Maximized"  
        Background="#F8F9FA"  
        Loaded="Window_Loaded">

    <Window.Resources>
        <FontFamily x:Key="FontAwesome">pack://application:,,,/Fonts/Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid</FontFamily>
        <!-- Estilos Modernos -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="8,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="{StaticResource FontAwesome}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"   
                                CornerRadius="8"  
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000"   
                                                Direction="270"   
                                                ShadowDepth="2"   
                                                BlurRadius="8"   
                                                Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"   
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Foreground" Value="#757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="FontFamily" Value="{StaticResource FontAwesome}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="FontFamily" Value="{StaticResource FontAwesome}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="FontFamily" Value="{StaticResource FontAwesome}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F5F5F5"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="RowHeight" Value="40"/>
        </Style>

        <Style x:Key="ModernDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderBrush" Value="#BBDEFB"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- Header Principal -->
        <Border Grid.Row="0" CornerRadius="0,0,15,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2196F3" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="10" Opacity="0.3"/>
            </Border.Effect>

            <Grid Margin="25,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xf1b3;"    
                        FontFamily="{StaticResource FontAwesome}"  
                        FontSize="32" Foreground="White" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="GESTOR DE INVENTARIO"   
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Sistema de Gestión Profesional"   
                                 FontSize="12" Foreground="#E3F2FD" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <!-- Información del Usuario -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"/>
                <Image Source="pack://application:,,,/Images/logo.png"   
                       Grid.Column="1" Margin="900,6,-18,12" Grid.ColumnSpan="2"   
                       />
                <Border Background="White" CornerRadius="20" Padding="12,6" Opacity="0.9" Grid.Column="1" Margin="779,29,120,23">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xF007;" 
                             FontFamily="{StaticResource FontAwesome}"  
                             FontSize="14" Foreground="#1976D2" Margin="0,0,8,0"/>
                        <TextBlock x:Name="txtUsuarioActual" Text="Usuario Actual"   
                                     FontWeight="SemiBold" Foreground="#1976D2"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        <!-- Toolbar de Acciones -->
        <Border Grid.Row="1" Background="White" Padding="20,15" Margin="15,15,15,0" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" BlurRadius="5" Opacity="0.1"/>
            </Border.Effect>

            <WrapPanel HorizontalAlignment="Center">
                <!-- Botones de Productos -->
                <Border Background="#E8F5E8" CornerRadius="8" Padding="5" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnAgregarProducto"   
                                Style="{StaticResource ModernButtonStyle}"    
                                Content="&#xf067; Agregar Producto"   
                                Click="btnAgregarProducto_Click" Width="144"/>
                        <Button x:Name="btnEditarProducto"   
                                Style="{StaticResource ModernButtonStyle}"   
                                Content="✏️ Editar"
                                FontFamily="Segoe UI" 
                                IsEnabled="False"   
                                Click="btnEditarProducto_Click" Cursor="" Width="81" Height="19"/>
                        <Button x:Name="btnEliminarProducto"   
                                Style="{StaticResource ModernButtonStyle}"  
                                Content="&#xf2ed;  Eliminar"   
                                IsEnabled="False"   
                                Click="btnEliminarProducto_Click" Width="87"/>
                    </StackPanel>
                </Border>

                <!-- Botones de Gestión -->
                <Border Background="#FFF3E0" CornerRadius="8" Padding="5" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnGestionProveedores"   
                                Style="{StaticResource ModernButtonStyle}"  
                                Content="&#xf466;  Proveedores"   
                                Click="btnGestionProveedores_Click" Width="124"/>
                        <Button x:Name="btnGestionCategorias"   
                                Style="{StaticResource ModernButtonStyle}"  
                                Content="📊 CATEGORIA"
                                FontFamily="Segoe UI"  
                                Click="btnGestionCategorias_Click" Width="107"/>
                        <Button x:Name="btnKardex"   
                                Style="{StaticResource ModernButtonStyle}"  
                                Content="&#xf328; Kardex"   
                                Click="btnKardex_Click" Width="75"/>
                    </StackPanel>
                </Border>

                <!-- Botones de Sistema -->
                <Border Background="#F3E5F5" CornerRadius="8" Padding="5" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnReportes"   
                                Style="{StaticResource ModernButtonStyle}"  
                                Content="&#xf15c; Reportes"   
                                Click="btnReportes_Click" Width="86"/>
                        <Button x:Name="btnGestionUsuarios"   
                                Style="{StaticResource ModernButtonStyle}"  
                                Visibility="Collapsed"
                                Content="&#xf0c0;  Usuarios"   
                                Click="btnGestionUsuarios_Click" Width="98" Cursor="Hand"/>
                        <Button x:Name="btnCerrarSesion"   
                                Style="{StaticResource DeleteButtonStyle}"  
                                Content="&#xf2f5;  Cerrar Sesion"   
                                Click="btnCerrarSesion_Click" Width="128"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </Border>
        <!-- DataGrid Principal -->
        <Border Grid.Row="2" Background="White" Margin="15" CornerRadius="10" Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título de la Sección -->
                <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="10,10,0,0" Padding="20,15">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xf1b2;"  
                                 FontFamily="{StaticResource FontAwesome}"  
                                 FontSize="18" Foreground="#1976D2" Margin="0,0,10,0"/>
                        <TextBlock Text="INVENTARIO DE PRODUCTOS"   
                                 FontSize="16" FontWeight="Bold" Foreground="#424242"/>
                        <Border Background="#4CAF50" CornerRadius="12" Padding="8,4" Margin="15,0,0,0">
                            <TextBlock x:Name="txtTotalProductos" Text="0 productos"   
                                     Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- DataGrid Mejorado -->
                <DataGrid x:Name="dgProductos" Grid.Row="1"   
                          Style="{StaticResource ModernDataGridStyle}"  
                          IsReadOnly="True"   
                          AutoGenerateColumns="False"   
                          SelectionMode="Single"  
                          SelectionChanged="dgProductos_SelectionChanged"  
                          Margin="1">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ModernDataGridColumnHeader}"/>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="45"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#BBDEFB"/>
                                    <Setter Property="Foreground" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="15,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Estado" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="6,3" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AlertaStock}" Value="⚠️">
                                                        <Setter Property="Background" Value="#FFF3CD"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AlertaStock}" Value="✅">
                                                        <Setter Property="Background" Value="#D4EDDA"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding AlertaStock}" FontSize="16" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" MinWidth="150"/>
                        <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="120"/>
                        <DataGridTextColumn Header="Stock Actual" Binding="{Binding StockActual}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Stock Mínimo" Binding="{Binding StockMinimo}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" Width="*" MinWidth="120"/>
                        <DataGridTextColumn Header="Proveedor" Binding="{Binding Proveedor}" Width="*" MinWidth="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Barra de Estado -->
        <Border Grid.Row="3" Background="#E3F2FD" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Sistema de Gestión de Inventario v1.0"   
                         Foreground="#1976D2" FontSize="12"/>
                <TextBlock Grid.Column="1" x:Name="txtFechaHora" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy HH:mm'}"   
                         Foreground="#1976D2" FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
		