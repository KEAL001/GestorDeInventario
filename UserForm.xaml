<Window x:Class="GestorDeInventario.UserForm"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Gestión de Usuario"   
        Height="450" Width="500"   
        WindowStartupLocation="CenterScreen"  
        ResizeMode="NoResize"  
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Estilos Conservadores -->
        <Style x:Key="ConservativeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                    <Setter Property="BorderBrush" Value="#999999"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C0C0C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ConservativeButtonStyle}">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#357ABD"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Simple -->
        <Border Grid.Row="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Padding="15,10" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Gestión de Usuario"   
                         FontSize="16" FontWeight="Bold"   
                         Foreground="#333333"   
                         HorizontalAlignment="Left"/>
                <TextBlock Text="Crear o editar información del usuario"   
                         FontSize="11" Foreground="#666666"   
                         Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formulario Principal -->
        <Border Grid.Row="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Campo Nombre de Usuario -->
                <Label Grid.Row="0" Grid.Column="0" Content="Nombre de Usuario:"   
                       FontSize="12" FontWeight="SemiBold" Foreground="#333333"   
                       VerticalAlignment="Center" Padding="0,0,10,0"/>
                <Border Grid.Row="0" Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,5">
                    <TextBox x:Name="txtNombreUsuario"   
                           Padding="8,6" FontSize="12"  
                           BorderThickness="0" Background="White"  
                           FontFamily="Segoe UI"/>
                </Border>

                <!-- Campo Contraseña -->
                <Label Grid.Row="1" Grid.Column="0" Content="Contraseña:"   
                       FontSize="12" FontWeight="SemiBold" Foreground="#333333"   
                       VerticalAlignment="Center" Padding="0,0,10,0"/>
                <Border Grid.Row="1" Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,5">
                    <PasswordBox x:Name="txtContraseña"   
                               Padding="8,6" FontSize="12"  
                               BorderThickness="0" Background="White"  
                               FontFamily="Segoe UI"/>
                </Border>

                <!-- Campo Confirmar Contraseña -->
                <Label Grid.Row="2" Grid.Column="0" Content="Confirmar Contraseña:"   
                       FontSize="12" FontWeight="SemiBold" Foreground="#333333"   
                       VerticalAlignment="Center" Padding="0,0,10,0"/>
                <Border Grid.Row="2" Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,5">
                    <PasswordBox x:Name="txtConfirmarContraseña"   
                               Padding="8,6" FontSize="12"  
                               BorderThickness="0" Background="White"  
                               FontFamily="Segoe UI"/>
                </Border>

                <!-- Campo Rol -->
                <Label Grid.Row="3" Grid.Column="0" Content="Rol:"   
                       FontSize="12" FontWeight="SemiBold" Foreground="#333333"   
                       VerticalAlignment="Center" Padding="0,0,10,0"/>
                <Border Grid.Row="3" Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,5">
                    <ComboBox x:Name="cmbRol"   
                            Padding="8,6" FontSize="12"  
                            BorderThickness="0" Background="White"  
                            FontFamily="Segoe UI"  
                            DisplayMemberPath="NombreRol"   
                            SelectedValuePath="ID"/>
                </Border>

                <!-- Información Adicional -->
                <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"   
                        Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"   
                        Padding="10" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="Información:" FontWeight="SemiBold" FontSize="11" Foreground="#666666" Margin="0,0,0,5"/>
                        <TextBlock Text="• La contraseña es obligatoria para nuevos usuarios"   
                                 FontSize="10" Foreground="#666666" Margin="0,0,0,2"/>
                        <TextBlock Text="• Para editar usuarios existentes, deje la contraseña vacía para mantener la actual"   
                                 FontSize="10" Foreground="#666666" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Botones de Acción -->
        <Border Grid.Row="2" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Padding="15,10" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnGuardar"   
                        Style="{StaticResource PrimaryButtonStyle}"  
                        Content="Guardar"   
                        Width="100"  
                        Click="btnGuardar_Click"/>

                <Button x:Name="btnCancelar"   
                        Style="{StaticResource ConservativeButtonStyle}"  
                        Content="Cancelar"   
                        Width="100"  
                        Click="btnCancelar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>