<Window x:Class="GestorDeInventario.CategoriaForm"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Gestión de Categoría"   
        Height="400" Width="550"   
        WindowStartupLocation="CenterScreen"  
        ResizeMode="NoResize"  
        Background="#F8F8F8">

    <Window.Resources>
        <!-- Estilos Profesionales -->
        <Style x:Key="ProfessionalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#357ABD"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                    <Setter Property="BorderBrush" Value="#2E6DA4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E6DA4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfessionalButtonStyle}">
            <Setter Property="Background" Value="#D9534F"/>
            <Setter Property="BorderBrush" Value="#D43F3A"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D43F3A"/>
                    <Setter Property="BorderBrush" Value="#C9302C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Profesional -->
        <Border Grid.Row="0" Background="#2C3E50" BorderBrush="#34495E" BorderThickness="1" Padding="15,10" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Gestión de Categoría"   
                         FontSize="16" FontWeight="Bold"   
                         Foreground="White"   
                         HorizontalAlignment="Left"/>
                <TextBlock Text="Crear o editar categoría de productos"   
                         FontSize="11" Foreground="#BDC3C7"   
                         Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formulario Principal -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" Padding="25">
            <StackPanel VerticalAlignment="Center">
                <!-- Campo Nombre de Categoría -->
                <Label Content="Nombre de Categoría:"   
                       FontSize="12" FontWeight="SemiBold" Foreground="#333333"   
                       Padding="0,0,0,5"/>
                <Border BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,0,20">
                    <TextBox x:Name="txtNombreCategoria"   
                           Padding="8,6" FontSize="12"  
                           BorderThickness="0" Background="White"  
                           FontFamily="Segoe UI"/>
                </Border>

                <!-- Información Adicional -->
                <Border Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"   
                        Padding="12" Margin="0,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Información del Sistema:" FontWeight="SemiBold" FontSize="11" Foreground="#666666" Margin="0,0,0,5"/>
                        <TextBlock Text="• El nombre de la categoría se convertirá automáticamente a mayúsculas"   
                                 FontSize="10" Foreground="#666666" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Botones de Acción -->
        <Border Grid.Row="2" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" Padding="15,10" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnGuardar"   
                        Style="{StaticResource ProfessionalButtonStyle}"  
                        Content="Guardar"   
                        Width="100"  
                        Click="btnGuardar_Click"/>

                <Button x:Name="btnCancelar"   
                        Style="{StaticResource CancelButtonStyle}"  
                        Content="Cancelar"   
                        Width="100"  
                        Click="btnCancelar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>