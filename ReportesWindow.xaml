<Window x:Class="GestorDeInventario.ReportesWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Reportes de Inventario"   
        Height="700" Width="1200"   
        WindowStartupLocation="CenterScreen"  
        Background="#F8F8F8"  
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Estilos Profesionales -->
        <Style x:Key="ProfessionalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#357ABD"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                    <Setter Property="BorderBrush" Value="#2E6DA4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E6DA4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfessionalButtonStyle}">
            <Setter Property="Background" Value="#5CB85C"/>
            <Setter Property="BorderBrush" Value="#4CAE4C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4CAE4C"/>
                    <Setter Property="BorderBrush" Value="#449D44"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ProfessionalDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="VerticalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="RowHeight" Value="35"/>
        </Style>

        <Style x:Key="ProfessionalDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Profesional -->
        <Border Grid.Row="0" Background="#2C3E50" BorderBrush="#34495E" BorderThickness="1" Padding="20,12" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Reportes de Inventario"   
                         FontSize="18" FontWeight="Bold"   
                         Foreground="White"   
                         HorizontalAlignment="Left"/>
                <TextBlock Text="Generar y exportar reportes del sistema"   
                         FontSize="12" Foreground="#BDC3C7"   
                         Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Panel de Controles -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" Padding="20,15" Margin="0,0,0,15">
            <StackPanel>
                <!-- Selección de Reporte -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Label Content="Selecciona un reporte:"   
                           FontSize="12" FontWeight="SemiBold" Foreground="#333333"   
                           VerticalAlignment="Center" Padding="0,0,10,0"/>
                    <Border BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,15,0">
                        <ComboBox x:Name="cmbReportes"   
                                Width="250"   
                                Padding="8,6" FontSize="12"  
                                BorderThickness="0" Background="White"  
                                FontFamily="Segoe UI"  
                                SelectionChanged="cmbReportes_SelectionChanged">
                            <ComboBoxItem Content="Inventario por Categoría"/>
                            <ComboBoxItem Content="Productos bajo Stock Mínimo"/>
                            <ComboBoxItem Content="Movimientos de Inventario (Rango de Fechas)"/>
                            <ComboBoxItem Content="Productos"/>
                        </ComboBox>
                    </Border>
                    <Button x:Name="btnExportar"  
                            Style="{StaticResource ActionButtonStyle}"  
                            Content="Exportar a Excel"   
                            Width="130"  
                            Click="btnExportar_Click"/>
                </StackPanel>

                <!-- Panel de Filtro de Fechas CORREGIDO -->
                <Border Background="#F8F9FA"   
                        Padding="15,10"   
                        Margin="0,0,0,0">
                    <StackPanel x:Name="pnlFiltroFechas"   
                              Orientation="Horizontal"   
                              Visibility="Collapsed">
                        <Label Content="Desde:"   
                               FontSize="12" FontWeight="SemiBold" Foreground="#333333"   
                               VerticalAlignment="Center" Padding="0,0,5,0"/>
                        <Border BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,10,0">
                            <DatePicker x:Name="dpFechaInicio"   
                                      Width="130"   
                                      Padding="8,6" FontSize="12"  
                                      BorderThickness="0" Background="White"  
                                      FontFamily="Segoe UI"/>
                        </Border>

                        <Label Content="Hasta:"   
                               FontSize="12" FontWeight="SemiBold" Foreground="#333333"   
                               VerticalAlignment="Center" Padding="0,0,5,0"/>
                        <Border BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,15,0">
                            <DatePicker x:Name="dpFechaFin"   
                                      Width="130"   
                                      Padding="8,6" FontSize="12"  
                                      BorderThickness="0" Background="White"  
                                      FontFamily="Segoe UI"/>
                        </Border>

                        <Button x:Name="btnGenerar"  
                                Style="{StaticResource ProfessionalButtonStyle}"  
                                Content="Generar"   
                                Width="90"  
                                Click="btnGenerar_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- DataGrid de Reportes -->
        <Border Grid.Row="2" Background="White" BorderBrush="#DDDDDD" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título de la Sección -->
                <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="15,10">
                    <TextBlock x:Name="txtTituloSeccion" Text="RESULTADOS DEL REPORTE"     
                        FontSize="14" FontWeight="Bold" Foreground="#495057"/>
                </Border>

                <!-- DataGrid Profesional -->
                <DataGrid x:Name="dgReportes" Grid.Row="1"     
                          Style="{StaticResource ProfessionalDataGridStyle}"    
                          AutoGenerateColumns="True"   
                          CanUserAddRows="False"   
                          IsReadOnly="True"  
                          SelectionMode="Single"  
                          Margin="0">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ProfessionalDataGridColumnHeader}"/>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="35"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F1F3F4"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="Foreground" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,6"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
