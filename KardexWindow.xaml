<Window x:Class="GestorDeInventario.KardexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kardex de Producto" Height="600" Width="1000" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
            <Label Content="Buscar Producto (Nombre, Descripción, Categoría o Proveedor):" VerticalAlignment="Center" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="txtBuscarProducto" Width="300" Margin="0,0,10,0" KeyDown="txtBuscarProducto_KeyDown"/>
                <Button x:Name="btnBuscarProducto" Content="Buscar" Width="80" Click="btnBuscarProducto_Click"/>
            </StackPanel>

            <ListView x:Name="lvResultadosBusqueda" Height="100" Margin="0,0,0,10" SelectionChanged="lvResultadosBusqueda_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Nombre}" Width="150"/>
                        <GridViewColumn Header="SKU" DisplayMemberBinding="{Binding SKU}" Width="100"/>
                        <GridViewColumn Header="Categoría" DisplayMemberBinding="{Binding Categoria.NombreCategoria}" Width="150"/>
                        <GridViewColumn Header="Proveedor" DisplayMemberBinding="{Binding Proveedor.NombreProveedor}" Width="150"/>
                        <GridViewColumn Header="Stock Actual" DisplayMemberBinding="{Binding StockActual}" Width="150"/>
                        <GridViewColumn Header="Descripción" DisplayMemberBinding="{Binding Descripcion}" Width="Auto"/>
                    </GridView>
                </ListView.View>
            </ListView>

        </StackPanel>

        <DataGrid x:Name="dgKardex" Grid.Row="1" Margin="10" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding FechaTransaccion, StringFormat='dd/MM/yyyy HH:mm'}" Width="*"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoTransaccion}" Width="*"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="*"/>
                <DataGridTextColumn Header="Costo Unitario" Binding="{Binding CostoUnitario, StringFormat=C2}" Width="*"/>
                <DataGridTextColumn Header="Usuario" Binding="{Binding Usuario.NombreUsuario}" Width="*"/>
                <DataGridTextColumn Header="Comentarios" Binding="{Binding Comentarios}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnRegistrarTransaccion" Content="Registrar Nueva Transacción" Grid.Row="2" Margin="10" Padding="10" HorizontalAlignment="Right" Click="btnRegistrarTransaccion_Click"/>
    </Grid>
</Window>