<Window x:Class="GestorDeInventario.ProveedorManagementWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Gestión de Proveedores"   
        Height="650" Width="1000"   
        WindowStartupLocation="CenterScreen"  
        Background="#F8F8F8"  
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Estilos Profesionales -->
        <Style x:Key="ProfessionalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#357ABD"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                    <Setter Property="BorderBrush" Value="#2E6DA4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E6DA4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfessionalButtonStyle}">
            <Setter Property="Background" Value="#5CB85C"/>
            <Setter Property="BorderBrush" Value="#4CAE4C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4CAE4C"/>
                    <Setter Property="BorderBrush" Value="#449D44"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfessionalButtonStyle}">
            <Setter Property="Background" Value="#F0AD4E"/>
            <Setter Property="BorderBrush" Value="#EEA236"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEA236"/>
                    <Setter Property="BorderBrush" Value="#E6982A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfessionalButtonStyle}">
            <Setter Property="Background" Value="#D9534F"/>
            <Setter Property="BorderBrush" Value="#D43F3A"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D43F3A"/>
                    <Setter Property="BorderBrush" Value="#C9302C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ProfessionalDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="VerticalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="RowHeight" Value="35"/>
        </Style>

        <Style x:Key="ProfessionalDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Profesional -->
        <Border Grid.Row="0" Background="#2C3E50" BorderBrush="#34495E" BorderThickness="1" Padding="20,12" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Gestión de Proveedores"   
                         FontSize="18" FontWeight="Bold"   
                         Foreground="White"   
                         HorizontalAlignment="Left"/>
                <TextBlock Text="Administrar proveedores del sistema"   
                         FontSize="12" Foreground="#BDC3C7"   
                         Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" Padding="15,10" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="btnAgregar"   
                        Style="{StaticResource ActionButtonStyle}"  
                        Content="Agregar Proveedor"   
                        Width="140"  
                        Click="btnAgregar_Click"/>

                <Button x:Name="btnEditar"   
                        Style="{StaticResource EditButtonStyle}"  
                        Content="Editar Proveedor"   
                        Width="130"  
                        Click="btnEditar_Click"/>

                <Button x:Name="btnEliminar"   
                        Style="{StaticResource DeleteButtonStyle}"  
                        Content="Eliminar Proveedor"   
                        Width="140"  
                        Click="btnEliminar_Click"/>
            </StackPanel>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Background="White" BorderBrush="#DDDDDD" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título de la Sección -->
                <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="15,10">
                    <TextBlock Text="LISTA DE PROVEEDORES"     
                             FontSize="14" FontWeight="Bold" Foreground="#495057"/>
                </Border>

                <!-- DataGrid Profesional -->
                <DataGrid x:Name="dgProveedores" Grid.Row="1"     
                          Style="{StaticResource ProfessionalDataGridStyle}"    
                          AutoGenerateColumns="False"   
                          CanUserAddRows="False"   
                          IsReadOnly="True"  
                          SelectionMode="Single"  
                          Margin="0">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ProfessionalDataGridColumnHeader}"/>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="35"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F1F3F4"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="Foreground" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,6"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="80"/>
                        <DataGridTextColumn Header="Nombre del Proveedor" Binding="{Binding NombreProveedor}" Width="*" MinWidth="200"/>
                        <DataGridTextColumn Header="Contacto" Binding="{Binding Contacto}" Width="*" MinWidth="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>